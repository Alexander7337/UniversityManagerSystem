@model UniversityManagerApp.Models.Course

@{
    ViewData["Title"] = "Enroll";
}

<h1>Enroll in course</h1>

<h4>Confirm that you want to enroll</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Enroll">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CourseID" />
            <div class="form-group">
                <label asp-for="CourseName" class="control-label"></label>
                <input asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-primary @(User.Identity.IsAuthenticated ? ""  : "disabled")"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
