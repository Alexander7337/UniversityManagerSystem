@using Microsoft.AspNetCore.Identity
@using UniversityManagerApp.Models
@inject SignInManager<Student> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    using (Html.BeginForm("LogOff", "Home", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <div class="collapse d-sm-inline-flex justify-content-between navbar-right">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Courses" asp-action="List">"Hello @User.Identity.Name!"</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Logout">Log off</a>
                </li>
            </ul>
        </div>
    }
}
else
{
    <div class="collapse d-sm-inline-flex justify-content-between navbar-right">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
            </li>
        </ul>
    </div>
}
